<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">Feature Item of Category</MudPaper>
    </MudItem>
    
    @foreach (var item in currentMenu) {
        <MudItem xs="4">
            <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">@item.name</MudPaper>
        </MudItem>
    }
</MudGrid>



